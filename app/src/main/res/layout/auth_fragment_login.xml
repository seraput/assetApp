<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".pages.auth.LoginFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:met_floatingLabel="highlight"
            android:hint="Email"
            app:met_textColorHint="#BDBDBD"
            app:met_baseColor="@color/white"
            android:fontFamily="@font/muli_semibold"
            app:met_floatingLabelTextColor="@color/attribut"
            app:met_primaryColor="@color/attribut"
            app:met_helperTextColor="@color/attribut"
            android:inputType="textEmailAddress"
            android:id="@+id/email_login"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:met_floatingLabel="highlight"
            android:hint="Password"
            android:fontFamily="@font/muli_semibold"
            app:met_textColorHint="#BDBDBD"
            app:met_baseColor="@color/white"
            app:met_floatingLabelTextColor="@color/attribut"
            app:met_primaryColor="@color/attribut"
            app:met_helperTextColor="@color/attribut"
            android:inputType="textPassword"
            android:id="@+id/pass_login"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Simpan Akun!"
            android:id="@+id/state"
            android:textColor="@android:color/darker_gray"
            android:buttonTint="@android:color/darker_gray"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            tools:ignore="HardcodedText,UnusedAttribute" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:cardElevation="8dp"
            android:id="@+id/cvLogin"
            app:cardCornerRadius="12dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:backgroundTint="@color/light"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textSize="16dp"
                android:textStyle="bold"
                android:fontFamily="@font/muli_semibold"
                android:textColor="@color/attribut"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>